<% if user_signed_in? %>
    <% if book.favorited_by?(current_user) %> 
        <p><span>お気に入り解除: </span><%= image_tag "star-on.png", size: '15x20' %><%=link_to book.favorites.count, book_favorites_path(book.id), method: :delete, remote:true %></p>
    <% else %>
        <p><span>お気に入り登録: </span><%= image_tag "star-off.png", size: '15x20' %><%=link_to book.favorites.count, book_favorites_path(book.id), method: :post, remote:true %></p>
    <% end %>
<% else %>
    <p><span>お気に入り数: </span><%= book.favorites.count %></p>
<% end %>