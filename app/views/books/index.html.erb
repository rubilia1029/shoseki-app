<%= render "shared/header" %>
<div class='main'>
  <div class='main-left'>
    <%=link_to "本の投稿", new_book_path%>
  </div>
  <div class='main-right'>
    <ul class='book-lists'>
      <% if @books.present?%>
      <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
        <% @books.each do |book|%>
        <li class='book'>
          <div class='item-info'>
            <div class='book-img-content'>
              <%= link_to image_tag(book.image),book_path(book.id) %>
            </div>
            <div class='info-right'>
              <div class='title'>
                <%=link_to book.name,book_path(book.id) %>
              </div>
              <div class='author'>
                <span>著者：<%= book.author%></span>
              </div>
              <div class='genre'>
                <span>ジャンル：<%=book.category.name %>
              </div>  
            </div>
          </div>
          
        </li>
        
        
        <% end %> 
        
    <% else %>
        
    <% end %>
      <%# //商品がある場合は表示されないようにしましょう %>
      <%# /商品がない場合のダミー %>
    </ul>
  </div>
<%# /商品一覧 %>
</div>
