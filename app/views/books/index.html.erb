<%= render "shared/header" %>
<div class='main'>
  <%=link_to "本の投稿", new_book_path%>
  
  <div class='main-contents'>
    
    <ul class='book-lists'>
       <% if @books.present?%>
      <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
          <% @books.each do |book|%>
         <li class='book'>
          <%= link_to book_path(book.id) do %>
          <div class='item-img-content'>
            <%= image_tag book.image, class: "picture" %>
  
          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= book.name %>
            </h3>
          </div>
         </li>
         <% end%>
         
         <% end %> 
         
       <% else %>
        
        <% end %>
      <%# //商品がある場合は表示されないようにしましょう %>
      <%# /商品がない場合のダミー %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
<div class='purchase-btn'>
  <span class='purchase-btn-text'>出品する</span>
  
</div>